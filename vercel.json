{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "15mb",
        "includeFiles": [
          "lib/**",
          "assets/**",
          "public/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1",
      "headers": {
        "Cache-Control": "public, max-age=3600"
      }
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "MAX_CONCURRENT_ATTACKS": "3",
    "RATE_LIMIT_WINDOW_MS": "300000",
    "RATE_LIMIT_MAX_REQUESTS": "10",
    "NODE_VERSION": "24.x"
  },
  "functions": {
    "api/index.js": {
      "maxDuration": 60,
      "memory": 3008,
      "runtime": "nodejs24.x"
    }
  },
  "regions": ["iad1"],
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  }
}
